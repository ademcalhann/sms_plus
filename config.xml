<?xml version='1.0' encoding='utf-8'?>
<widget id="com.smsplus.system" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>Sms Plus</name>
    <description>
      Buyuk gruplar icin ucretsiz toplu sms gonderme, yoklama yapma ve haberlesme programi
    </description>
    <author email="dev@cordova.apache.org" href="http://cordova.io">
      Adem Calhan
    </author>
    <content src="index.html" />
    <preference name="DisallowOverscroll" value="true" />
     <preference name="Fullscreen" value="true" />
<preference name="AndroidPersistentFileLocation" value="Compatibility" />
    <preference name="android-minSdkVersion" value="26" />
    <plugin name="cordova-plugin-file" source="npm" spec="~4.1.1" />
    <plugin name="cordova-plugin-file-transfer" source="npm" spec="~1.5.0" />
    <plugin name="cordova-plugin-network-information" source="npm" spec="~1.2.0" />
    <plugin name="cordova-plugin-whitelist" source="npm" spec="~1.2.1" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
    <plugin name="cordova-plugin-sms" spec="^1.0.5" />
    <engine name="android" spec="^7.1.4" />
</widget>
